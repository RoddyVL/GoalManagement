<div class='container mt-5'>
 <h1 class= 'text-center'><%= @current_day.strftime("%A %d %B")%> : </h1>

<div data-controller="step", class= 'mt-5'>
  <% @steps.each do |step| %>
    <div class="form-check">
      <%= check_box_tag "step_status_#{step.id}", "1", step.status == 1,
          class: "form-check-input",
          data: { action: "click->step#toggle", step_id: step.id } %>
      <%= label_tag "step_status_#{step.id}", step.description, class: "form-check-label" %>
    </div>
  <% end %>
</div>



</div>
