<%= simple_form_for [@goal, @session] do |f| %>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Créer une Session</h2>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="form-group">
          <label for="session_start_time">Start Time</label>
          <input type="datetime-local" class="form-control" name="session[start_time]" value="<%= @session.start_time.present? ? @session.start_time.strftime("%Y-%m-%dT%H:%M") : "" %>">
        </div>

        <div class="form-group">
          <label for="session_end_time">End Time</label>
          <input type="datetime-local" class="form-control" name="session[end_time]" value="<%= @session.end_time.present? ? @session.end_time.strftime("%Y-%m-%dT%H:%M") : "" %>">
        </div>

        <div class="form-group text-center">
          <%= f.submit "Create Session", class: "btn btn-outline-dark mt-2" %>
        </div>

        <!-- Lien retour centré sans prendre toute la largeur -->
        <div class="form-group text-center">
          <%= link_to "Retour", goal_path(@goal), class: 'btn btn-outline-secondary mt-5' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
