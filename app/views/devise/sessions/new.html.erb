<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 form-login ">
      <h2><%= t("devise.sessions.new.title") %></h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com", label: t("devise.sessions.new.email") %>
          <%= f.input :password, required: false, placeholder: "••••••", label: t("devise.sessions.new.password") %>
          <%= f.input :remember_me, as: :boolean, label: t("devise.sessions.new.remember_me"), label_html: { class: "ms-2" }if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, t("devise.sessions.new.submit"), class: "btn btn-primary" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
