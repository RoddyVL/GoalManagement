<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 form-login ">
      <h2><%= t('auth.sign_up') %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      label: t('auth.password'),
                      required: true,
                      hint: (t('auth.password_hint', count: @minimum_password_length)  if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      label: t('auth.password_confirmation'),
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit,  t('auth.sign_up'), class:'btn text-light fw-bold', style:'background-color: #007B8F;' %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
